citHeader("To cite diversityGPT in publications use:")

bibentry(
  bibtype    = "Manual",
  title      = "diversityGPT: Universal Diversity Analysis with AI-Powered Ecological Intelligence",
  author     = person("Scott", "Handley"),
  year       = "2025",
  note       = "R package version 1.0.0",
  url        = "https://github.com/shandley/diversityGPT",
  textVersion = paste(
    "Handley, S. (2025).",
    "diversityGPT: Universal Diversity Analysis with AI-Powered Ecological Intelligence.",
    "R package version 1.0.0.",
    "https://github.com/shandley/diversityGPT"
  )
)

bibentry(
  bibtype    = "Article", 
  title      = "Universal Information Theory Framework for Microbiome Diversity Analysis",
